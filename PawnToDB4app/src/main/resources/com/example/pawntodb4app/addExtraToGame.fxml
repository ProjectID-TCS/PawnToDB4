<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.pawntodb4app.AddExtraToGameController">

    <ComboBox fx:id="openingBox" promptText="Wybierz opening"/>

    <TextField fx:id="endingField" promptText="Podaj ending"/>

    <TextArea fx:id="movesRecordArea" promptText="Wpisz zapis partii" prefHeight="200"/>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Dodaj" onAction="#handleAddButton"/>
    </HBox>
</VBox>
