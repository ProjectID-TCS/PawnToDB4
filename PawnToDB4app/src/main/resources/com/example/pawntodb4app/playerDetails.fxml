<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.example.pawntodb4app.PlayerDetailsController"
          xmlns="http://javafx.com/javafx/8"
          hgap="10" vgap="10"
          alignment="CENTER">
    <HBox alignment="CENTER" GridPane.rowIndex="1">
        <Label text="ImiÄ™: "/>
        <Label fx:id="firstNameField"/>
    </HBox>
    <HBox alignment="CENTER" GridPane.rowIndex="2">
        <Label text="Nazwisko: "/>
        <Label fx:id="lastNameField"/>
    </HBox>
    <HBox alignment="CENTER" GridPane.rowIndex="3">
        <Label text="Grupa: "/>
        <Label fx:id="groupField"/>
    </HBox>
    <VBox alignment="CENTER" GridPane.rowIndex="4">
        <LineChart fx:id="eloChart" title="Historia elo">
            <xAxis>
                <CategoryAxis side="BOTTOM" label="data"/>
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" label="ELO"/>
            </yAxis>
        </LineChart>
    </VBox>

    <HBox alignment="CENTER" GridPane.rowIndex="5">
        <Button text="Zamknij" onAction="#handleCloseButton"/>
        <GridPane.margin>
            <Insets bottom="10"/>
        </GridPane.margin>
    </HBox>
</GridPane>
